/* pages/my_record/my_record.wxss */
@import '../game/game.wxss';
.scroll{
  display: flex;
  flex-direction: column;
  align-items: center;
}

.loading-placeholder {
  background-color: #F0F0F0;
  width: 100%;
  height: 100%;
  position: fixed;
  z-index: -1;
}

.container {
  background-color: #f9eac1;
  align-items: center;
  transition: all .2s ease-in;
}


.title {
  color: #9C5600;
  font-size: 36rpx;
  text-shadow: 1rpx 0 0 #9C5600;
  line-height: 1;
  margin-top: 51rpx;
}

.grids {
  width: 650rpx;
  margin-bottom: 50rpx;
  margin-top: 16rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  align-content: center;
  justify-content: flex-start;
}

.item {
  height: 136rpx;
  width: 130rpx;
  flex: 0 0 25%;
  position: relative;
  margin-top: 40rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.item_content {
  height: 136rpx;
  width: 130rpx;
  position: relative;
}

.back {
  height: 136rpx;
  width: 130rpx;
  position: absolute;
  top: 0px;
  z-index: 0;
}

.finished {
  height: 38rpx;
  width: 38rpx;
  position: absolute;
  right: -15rpx;
  top: -10rpx;
}

.text_group {
  position: absolute;
  height: 100%;
  width: 100%;
  z-index: 1;

  line-height: 1;
  display: flex;
  display: -webkit-flex;
  flex-direction: column;
  align-items: center;
  justify-content: center; 
}

.num {
  font-size: 60rpx;
  font-weight: 500;
  color: white;
}

.name {
  color: #5B8B23;
  font-size: 26rpx;
  font-weight: 700;
  margin-top: 10rpx;
}

/* modal组件样式 */
.dialog-simple{
  width: 100%;
  height: 100%;
  position: fixed;
  display: flex;
  top: 0;
  left: 0;
  z-index: 22;
}
.dialog-simple-back{
 width: 100%;
  height: 100%;
  position: fixed;
  z-index: 20;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  left: 0;
  top: 0;
}
.dialog-simple-container {
  z-index: 30;
  width: 503rpx;
  background-color: white;
  border-radius: 10rpx;
  margin: auto auto;
  color: #333;
  font-size: 30rpx;
  text-align: center;

  box-sizing: border-box;
  padding: 55rpx 30rpx 10rpx 30rpx;
}
.dialog-comment-simple-container{
  padding: 0;
}
.dialog-simple-content {
  display: block;
  padding: 30rpx 0 10rpx 0;
}
.dialog-comment-simple-content{
  line-height: 50rpx;
}
.dialog-simple-select {
  font-size: 26rpx;
  height: 100rpx;
  line-height: 100rpx;
  width: 100%;
  display: flex;

  box-sizing: border-box;
  padding: 0 30rpx;
  align-items: center;
  margin-top: 20rpx;
}
.dialog-comment-simple-select{
  padding: 0;
  display: flex;
  height: 80rpx;
  line-height: 80rpx;
}
.dialog-simple-op {
  /* width: 100rpx; */
  padding: 0 30rpx;
  text-align: center;
}
.dialog-comment-simple-op{
  flex: 1;
  text-align: center;
  padding: 0;
  border-top: 1rpx solid #E6E6E6;
  color: #999;
}
.dialog-comment-simple-op:nth-child(2){
   border-left: 1rpx solid #E6E6E6;
}

.themeColorsFont{
  color: #57d78c;
}
